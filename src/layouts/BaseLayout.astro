---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'A modern Astro site migrated from WordPress' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <style is:global>
      :root {
        --color-primary: #2563eb;
        --color-primary-dark: #1d4ed8;
        --color-primary-light: #3b82f6;
        --color-text: #111827;
        --color-text-light: #4b5563;
        --color-text-lighter: #6b7280;
        --color-bg: #ffffff;
        --color-bg-alt: #fafafa;
        --color-bg-hover: #f5f5f5;
        --color-border: #e5e5e5;
        --color-border-light: #fafafa;
        --shadow-sm: 0 1px 1px 0 rgb(0 0 0 / 0.03);
        --shadow-md: 0 2px 4px -1px rgb(0 0 0 / 0.06), 0 1px 2px -1px rgb(0 0 0 / 0.06);
        --shadow-lg: 0 4px 8px -2px rgb(0 0 0 / 0.08), 0 2px 4px -2px rgb(0 0 0 / 0.08);
        --radius: 0.25rem;
        --radius-lg: 0.5rem;
        --spacing-xs: 0.5rem;
        --spacing-sm: 0.75rem;
        --spacing-md: 1rem;
        --spacing-lg: 1.5rem;
        --spacing-xl: 2rem;
        --spacing-2xl: 3rem;
      }

      * {
        box-sizing: border-box;
        margin: 0;
      }

      html {
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        line-height: 1.6;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }

      body {
        color: var(--color-text);
        background: var(--color-bg);
        font-size: 1rem;
        line-height: 1.7;
      }

      h1, h2, h3, h4, h5, h6 {
        line-height: 1.2;
        font-weight: 700;
        color: var(--color-text);
        margin-top: 0;
      }

      h1 {
        font-size: 2.5rem;
        margin-bottom: var(--spacing-lg);
      }

      h2 {
        font-size: 2rem;
        margin-bottom: var(--spacing-md);
        margin-top: var(--spacing-xl);
      }

      h3 {
        font-size: 1.5rem;
        margin-bottom: var(--spacing-sm);
        margin-top: var(--spacing-lg);
      }

      p {
        margin-bottom: var(--spacing-md);
      }

      a {
        color: var(--color-primary);
        text-decoration: none;
        transition: color 0.2s ease;
      }

      a:hover {
        color: var(--color-primary-dark);
        text-decoration: underline;
      }

      code {
        background: var(--color-bg-alt);
        padding: 0.125rem 0.375rem;
        border-radius: 0.25rem;
        font-size: 0.875em;
        font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
        color: var(--color-primary-dark);
      }

      pre {
        background: #f8f9fa;
        color: #1f2937;
        padding: var(--spacing-lg);
        border-radius: var(--radius);
        overflow-x: auto;
        margin: var(--spacing-lg) 0;
        font-size: 0.875rem;
        line-height: 1.6;
      }

      pre code {
        background: none;
        padding: 0;
        color: inherit;
        font-size: inherit;
      }

      blockquote {
        border-left: 4px solid var(--color-primary);
        padding-left: var(--spacing-lg);
        margin: var(--spacing-lg) 0;
        color: var(--color-text-light);
        font-style: italic;
      }

      img {
        max-width: 100%;
        height: auto;
        border-radius: var(--radius);
      }

      ul, ol {
        margin-bottom: var(--spacing-md);
        padding-left: var(--spacing-xl);
      }

      li {
        margin-bottom: var(--spacing-xs);
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin: var(--spacing-lg) 0;
      }

      th, td {
        border: 1px solid var(--color-border);
        padding: var(--spacing-sm) var(--spacing-md);
        text-align: left;
      }

      th {
        background: var(--color-bg-alt);
        font-weight: 600;
      }

      hr {
        border: none;
        border-top: 1px solid var(--color-border);
        margin: var(--spacing-xl) 0;
      }

      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 var(--spacing-lg);
      }

      @media (min-width: 768px) {
        .container {
          padding: 0 var(--spacing-xl);
        }
      }
    </style>
    <slot name="head" />
    <script is:inline>
      // Post navigation events to parent window for iframe history tracking
      (function() {
        // Send initial URL
        if (window.parent !== window) {
          window.parent.postMessage({
            type: 'iframe-navigation',
            url: window.location.href,
            action: 'load'
          }, '*');
        }

        // Listen for history navigation commands from parent
        window.addEventListener('message', function(event) {
          if (event.data && event.data.type === 'navigate-history') {
            if (event.data.direction === 'back') {
              window.history.back();
            } else if (event.data.direction === 'forward') {
              window.history.forward();
            }
          } else if (event.data && event.data.type === 'query-history-state') {
            // Respond with current history state
            if (window.parent !== window) {
              window.parent.postMessage({
                type: 'iframe-history-state',
                canGoBack: window.history.length > 1 && window.history.scrollRestoration !== 'manual',
                canGoForward: false // Can't reliably detect forward state
              }, '*');
            }
          }
        });

        // Track navigation via popstate (back/forward)
        window.addEventListener('popstate', function() {
          if (window.parent !== window) {
            window.parent.postMessage({
              type: 'iframe-navigation',
              url: window.location.href,
              action: 'popstate'
            }, '*');
          }
        });

        // Track navigation via pushState/replaceState
        const originalPushState = history.pushState;
        const originalReplaceState = history.replaceState;

        history.pushState = function() {
          originalPushState.apply(history, arguments);
          if (window.parent !== window) {
            window.parent.postMessage({
              type: 'iframe-navigation',
              url: window.location.href,
              action: 'pushstate'
            }, '*');
          }
        };

        history.replaceState = function() {
          originalReplaceState.apply(history, arguments);
          if (window.parent !== window) {
            window.parent.postMessage({
              type: 'iframe-navigation',
              url: window.location.href,
              action: 'replacestate'
            }, '*');
          }
        };

        // Track link clicks (for same-origin navigation)
        document.addEventListener('click', function(e) {
          const link = e.target.closest('a');
          if (link && link.href && !link.target && !link.hasAttribute('download')) {
            // Only track if it's a same-origin link
            try {
              const linkUrl = new URL(link.href, window.location.href);
              if (linkUrl.origin === window.location.origin) {
                // Small delay to let navigation happen
                setTimeout(function() {
                  if (window.parent !== window) {
                    window.parent.postMessage({
                      type: 'iframe-navigation',
                      url: window.location.href,
                      action: 'click'
                    }, '*');
                  }
                }, 100);
              }
            } catch (e) {
              // Ignore invalid URLs
            }
          }
        });
      })();
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>
